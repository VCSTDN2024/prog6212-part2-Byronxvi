<Window x:Class="CMCS_WPF.SubmitClaim"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Submit Claim" Height="400" Width="500">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Submit New Claim" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

            <TextBox Margin="0,0,0,10">
                <TextBox.ToolTip>Month (e.g. August)</TextBox.ToolTip>
            </TextBox>
            <TextBox Margin="0,0,0,10">
                <TextBox.ToolTip>Year</TextBox.ToolTip>
            </TextBox>
            <TextBox Margin="0,0,0,10">
                <TextBox.ToolTip>Total Hours</TextBox.ToolTip>
            </TextBox>
            <TextBox Margin="0,0,0,10">
                <TextBox.ToolTip>Hourly Rate</TextBox.ToolTip>
            </TextBox>

            <Button Content="Upload Supporting Document" Width="200" Margin="0,0,0,15"/>

            <Button Content="Submit Claim" Width="120" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
