<Window x:Class="CMCS_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CMCS Login" Height="300" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Contract Monthly Claim System" 
                       FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBox Name="txtUsername"  Margin="0,0,0,10"/>
            <PasswordBox Name="txtPassword" Margin="0,0,0,10"/>

            <ComboBox Name="cmbRole" Margin="0,0,0,20">
                <ComboBoxItem Content="Lecturer"/>
                <ComboBoxItem Content="Programme Coordinator"/>
                <ComboBoxItem Content="Academic Manager"/>
            </ComboBox>

            <Button Content="Login" Width="100" Height="30" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
