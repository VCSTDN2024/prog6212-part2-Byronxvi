<Window x:Class="CMCS_WPF.Views.LecturerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:CMCS_WPF.ViewModels"
        Title="Lecturer - Submit Claim" Height="500" Width="600">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Submit Claim" FontSize="18" FontWeight="Bold" />
            <StackPanel Orientation="Horizontal" Margin="0,8">
                <TextBlock Text="Lecturer:" Width="100" VerticalAlignment="Center"/>
                <TextBox Width="350" Text="{Binding NewClaim.LecturerName, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="Hours:" Width="100" VerticalAlignment="Center"/>
                <TextBox Width="100" Text="{Binding NewClaim.HoursWorked, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Text="Hourly Rate:" Width="100" Margin="20,0,0,0" VerticalAlignment="Center"/>
                <TextBox Width="100" Text="{Binding NewClaim.HourlyRate, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="Notes:" Width="100" VerticalAlignment="Top"/>
                <TextBox Width="350" Height="60" Text="{Binding NewClaim.Notes}" AcceptsReturn="True" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,8">
                <Button Content="Upload Supporting Document" Command="{Binding UploadCommand}" />
                <TextBlock Text="{Binding NewClaim.OriginalFileName}" Margin="10,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>

            <Button Content="Submit Claim" Command="{Binding SubmitCommand}" Width="140" Height="35" Background="#198754" Foreground="White"/>
        </StackPanel>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Path=DataContext.ClaimService.Claims, RelativeSource={RelativeSource AncestorType=Window}}" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Lecturer" Binding="{Binding LecturerName}" Width="150"/>
                <DataGridTextColumn Header="Hours" Binding="{Binding HoursWorked}" Width="70"/>
                <DataGridTextColumn Header="Rate" Binding="{Binding HourlyRate}" Width="80"/>
                <DataGridTextColumn Header="Total" Binding="{Binding TotalAmount}" Width="80"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                <DataGridTextColumn Header="File" Binding="{Binding OriginalFileName}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
