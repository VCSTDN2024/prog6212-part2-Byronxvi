<Window x:Class="CMCS_WPF.LecturerDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lecturer Dashboard" Height="400" Width="600">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="10">
            <Button Content="Submit Claim" Width="120" Margin="5"/>
            <Button Content="View Status" Width="120" Margin="5"/>
        </StackPanel>

        <DataGrid AutoGenerateColumns="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Claim ID" Binding="{Binding ClaimId}"/>
                <DataGridTextColumn Header="Month" Binding="{Binding Month}"/>
                <DataGridTextColumn Header="Hours" Binding="{Binding HoursWorked}"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
